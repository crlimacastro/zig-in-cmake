{
  "version": 8,
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Config",
      "description": "Default (Debug) build",
      "binaryDir": "${sourceDir}/build",
      "toolchainFile": "${sourceDir}/zig-toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    }
  ],
  "workflowPresets": [
    {
      "name": "default",
      "steps": [
        {
          "type": "configure",
          "name": "default"
        },
        {
          "type": "build",
          "name": "default"
        }
      ]
    }
  ]
}